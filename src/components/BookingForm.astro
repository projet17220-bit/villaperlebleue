---
// src/components/BookingForm.astro
const lang = Astro.props.lang;
const t = await import(`../i18n/${lang}.json`).then(m => m.default);
---

<form name="reservation" method="POST" netlify-honeypot="bot-field" data-netlify="true" class="max-w-md mx-auto space-y-4 p-8 bg-white rounded-2xl shadow-xl">
  <input type="hidden" name="form-name" value="reservation" />
  <div>
    <input type="text" name="nom" placeholder="Nom complet *" required 
           class="w-full p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition-all" />
  </div>
  <div class="grid grid-cols-2 gap-4">
    <input type="email" name="email" placeholder="Email *" required 
           class="p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200" />
    <input type="tel" name="telephone" placeholder="Téléphone" 
           class="p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200" />
  </div>
  <div class="grid grid-cols-2 gap-4">
    <input type="date" name="checkin" required class="p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200" />
    <input type="date" name="checkout" required class="p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200" />
  </div>
  <input type="number" name="voyageurs" placeholder="Nombre voyageurs (1-10)" min="1" max="10" 
         class="w-full p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200" />
  <textarea name="message" placeholder="Message ou dates alternatives souhaitées" rows="4" 
            class="w-full p-4 border border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 resize-vertical"></textarea>
  <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white py-4 px-8 rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200">
    Envoyer ma demande de réservation
  </button>
</form>
<p class="text-center mt-6 text-sm text-gray-600 max-w-md mx-auto">
  ✅ Réponse sous 24h | Pas de paiement en ligne | Validation manuelle requise
</p>
